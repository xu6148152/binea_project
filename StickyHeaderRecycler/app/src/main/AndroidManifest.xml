<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.zepp.www.sample"
        >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name="com.zepp.www.sample.StickyHeadersDemoApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            >
        <activity
                android:name="com.zepp.www.sample.ui.MainActivity"
                android:theme="@style/AppTheme.NoActionBar"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.zepp.www.sample.ui.AddressBookDemoActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:label="@string/title_address_book_demo"
                android:launchMode="singleTop"
                android:parentActivityName="com.zepp.www.sample.ui.MainActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.zepp.www.sample.ui.MainActivity"
                    />
        </activity>

        <activity
                android:name="com.zepp.www.sample.ui.HeaderCallbacksDemoActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:label="@string/title_simple_demo"
                android:launchMode="singleTop"
                android:parentActivityName="com.zepp.www.sample.ui.MainActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.zepp.www.sample.ui.MainActivity"
                    />
        </activity>

        <activity
                android:name="com.zepp.www.sample.ui.SectioningAdapterDemoActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:label="@string/title_sectioning_adapter_demo"
                android:launchMode="singleTop"
                android:parentActivityName="com.zepp.www.sample.ui.MainActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.zepp.www.sample.ui.MainActivity"
                    />
        </activity>
    </application>

</manifest>