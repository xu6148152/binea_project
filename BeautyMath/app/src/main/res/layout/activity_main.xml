<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <TextView
                android:id="@+id/about_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#444444"
                android:padding="10dp"
                android:textStyle="italic|bold"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change parameters below Or choose top-right menu.试试随便改变下面的参数.(或者点击右上角)"
                android:gravity="center"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/radius_ax"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="radiusAX (300)"
                    android:inputType="number"
                    />

            <EditText
                    android:id="@+id/radius_ay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="radiusAY (10)"
                    android:inputType="number"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/radius_bx"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="radiusBX (10)"
                    android:inputType="number"
                    />

            <EditText
                    android:id="@+id/radius_by"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="radiusBY (300)"
                    android:inputType="number"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/speedOuterPoint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="speedOuterPoint (32)"
                    android:inputType="number"
                    />

            <EditText
                    android:id="@+id/speedInnerPoint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="speedInnerPoint (5)"
                    android:inputType="number"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/loopTotalCount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="loopTotalCount (30)"
                    android:inputType="number"
                    />

            <EditText
                    android:id="@+id/durationSeconds"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="durationSeconds (50)"
                    android:inputType="number"
                    />

        </LinearLayout>

        <Button
                android:id="@+id/start_transform_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Transform (开始)"
                android:textAllCaps="false"
                />

        <com.zepp.www.beautymath.BeautyMathView
                android:id="@+id/wj_magic_curve_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
