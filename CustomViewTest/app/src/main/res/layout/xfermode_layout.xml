<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xubinggui.customviewtest.widget.CustomBitmapView
            android:id="@+id/avoid_mode_target"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <com.example.xubinggui.customviewtest.widget.CustomBitmapView
            android:visibility="gone"
            android:id="@+id/avoid_mode_avoid"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <com.example.xubinggui.customviewtest.widget.PortDuffView
            android:id="@+id/poter_duff_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</ScrollView>