<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <ImageView
        android:id="@+id/aside"
        android:layout_width="1080px"
        android:layout_height="763px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/sidea" />


    <RelativeLayout
        android:id="@+id/Down"
        android:layout_width="998px"
        android:layout_height="230px"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/pricelabel"
            android:layout_width="264px"
            android:layout_height="115.2px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:background="@mipmap/pricelabel"
            android:baselineAlignBottom="false" />

        <Button
            android:id="@+id/buybutton"
            android:layout_width="190px"
            android:layout_height="132px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@mipmap/buybutton"
            android:alpha="0" />

        <ImageView
            android:id="@+id/input"
            android:layout_width="432px"
            android:layout_height="136.8px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:background="@mipmap/input" />
        <Button
            android:layout_width="190px"
            android:layout_height="132px"
            android:id="@+id/checkout"
            android:background="@mipmap/checkout"
            android:layout_alignTop="@+id/buybutton"
            android:layout_alignStart="@+id/buybutton" />

        <Button
            android:id="@+id/framebutton"
            android:layout_width="290px"
            android:layout_height="200px"
            android:background="@anim/btn_frame_anim"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/buybutton"
            android:layout_marginEnd="-17dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="909px"
        android:layout_height="4px"
        android:layout_alignBottom="@+id/aside"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:background="@mipmap/line" />

    <RelativeLayout
        android:layout_width="2536px"
        android:layout_height="451px"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/line"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:id="@+id/Up"
            android:layout_width="998px"
            android:layout_height="451px"
            android:layout_alignBottom="@+id/line"
            android:layout_centerHorizontal="true"
            android:clipChildren="false">


            <ImageView
                android:id="@+id/l1"
                android:layout_width="736.8px"
                android:layout_height="33.6px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="21dp"
                android:layout_marginTop="22dp"
                android:background="@mipmap/l1" />

            <ImageView
                android:id="@+id/l2"
                android:layout_width="201.6px"
                android:layout_height="31.2px"
                android:background="@mipmap/l2"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/l1"
                android:layout_alignStart="@+id/l3" />

            <ImageView
                android:id="@+id/l3"
                android:layout_width="350.4px"
                android:layout_height="40.8px"
                android:background="@mipmap/l3"
                android:layout_alignLeft="@+id/l1"
                android:layout_marginTop="70dp" />

            <ImageView
                android:id="@+id/l4"
                android:layout_width="422.4px"
                android:layout_height="36px"
                android:background="@mipmap/l4"
                android:layout_alignLeft="@+id/l1"
                android:layout_marginTop="87dp" />

            <ImageView
                android:id="@+id/l5"
                android:layout_width="564px"
                android:layout_height="40.8px"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/l4"
                android:layout_marginBottom="15dp"
                android:background="@mipmap/l5" />

            <ImageView
                android:id="@+id/topthings"
                android:layout_width="998px"
                android:layout_height="451px"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:alpha="1"
                android:background="@mipmap/topthings" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/wave1"
            android:layout_width="2536px"
            android:layout_height="232px"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@mipmap/wave1"
            android:alpha="1"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/wave2"
            android:layout_width="2536px"
            android:layout_height="232px"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@mipmap/wave2"
            android:adjustViewBounds="true"
            android:alpha="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>