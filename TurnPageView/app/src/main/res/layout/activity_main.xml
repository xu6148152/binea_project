<demo.binea.com.turnpageview.widget.CustomLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <demo.binea.com.turnpageview.widget.TurnPageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <demo.binea.com.turnpageview.widget.FoldView
        android:id="@+id/trun_page"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <demo.binea.com.turnpageview.widget.CustomImageView
        android:id="@+id/custom_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="20dp"/>

    <demo.binea.com.turnpageview.widget.IconView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test" />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test" />

</demo.binea.com.turnpageview.widget.CustomLayout>
